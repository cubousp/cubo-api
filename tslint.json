{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single"],
        "semicolon": [true, "never"],
        "no-console": false,
        "max-line-length": [true, 80]
    },
    "linterOptions": {
        "exclude": ["src/database/generated/*.ts"],
        "include": ["**/*.spec.ts"]
    }
}